{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "include": ["src/**/*"],

  "compilerOptions": {
    "lib": ["es2022"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "dist",
    "sourceMap": true,
    "declaration": true
  }
}
